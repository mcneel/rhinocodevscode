{
	"name": "rhinocode",
	"displayName": "RhinoCode",
	"description": "RhinoCode interoperability extension",
	"publisher": "McNeel",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/mcneel/rhinocodevscode"
	},
	"version": "0.0.2",
	"icon": "rhinocode.png",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"rhino3d",
		"rhinocode",
		"rhinoscript"
	],
	"activationEvents": [
		"onCommand:rhinocode.runInRhino"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rhinocode.runInRhino",
				"title": "Run In Rhino WIP",
				"category": "Rhino"
			}
		],
		"configuration": {
			"title": "RhinoCode",
			"properties": {
				"rhinocode.rhinoInstallPath": {
					"type": "string",
					"default": "",
					"description": "Full install path of Rhino on your machine"
				},
				"rhinocode.showActiveDocument": {
					"title": "Show Active Document",
					"type": "boolean",
					"default": false,
					"description": "Show name of active document in Rhino selector"
				},
				"rhinocode.showActiveViewport": {
					"title": "Show Active Viewport",
					"type": "boolean",
					"default": false,
					"description": "Show name of active viewport in Rhino selector"
				},
				"rhinocode.showProcessId": {
					"title": "Show Process Id",
					"type": "boolean",
					"default": false,
					"description": "Show process id in Rhino selector"
				},
				"rhinocode.showProcessAge": {
					"title": "Show Process Age",
					"type": "boolean",
					"default": false,
					"description": "Show process age in Rhino selector"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"compare-versions": "^4.1.1",
		"timespan-parser": "^1.2.0"
	}
}
